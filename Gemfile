    gem 'jemoji'
    gem 'jekyll-target-blank'
    gem 'jekyll-og-image'
    gem 'jekyll-paginate'
    gem 'jekyll-seo-tag'
    gem 'jekyll-sitemap'
    gem 'jekyll-feed'
    gem 'jekyll-pwa-workbox'
end
